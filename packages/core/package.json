{
  "name": "@cosmos-devs/core",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "dev": "svelte-package -w",
    "build": "svelte-package",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@sveltejs/kit": "^1.3.7",
    "@sveltejs/package": "^1.0.0",
    "rimraf": "latest",
    "svelte-check": "^3.0.1",
    "typescript": "latest"
  },
  "peerDependencies": {
    "svelte": "latest"
  },
  "publishConfig": {
    "access": "public"
  }
}
